<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="bg69tg"
        android:id="@+id/txtWelcome"
        android:layout_below="@+id/textView20"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0"
        android:id="@+id/txtPasswords"
        android:layout_marginStart="8dp"
        android:layout_alignTop="@+id/textView21"
        android:layout_toEndOf="@+id/textView21"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome"
        android:id="@+id/textView20"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Amount of Passwords Saved"
        android:id="@+id/textView21"
        android:textStyle="bold"
        android:layout_below="@+id/txtWelcome"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp" />

    <ImageView
        android:id="@+id/imgHelp"
        android:src="@drawable/question_mark"
        android:tint="@color/colorAccent"
        android:padding="50dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/textView21"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Settings"
        android:id="@+id/textView13"
        android:textColor="#000000"
        android:layout_below="@+id/imgSettings"
        android:layout_alignEnd="@+id/imgSettings"
        android:layout_toEndOf="@+id/imgHelp"
        android:textAlignment="center"
        android:layout_alignStart="@+id/imgSettings" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Help"
        android:id="@+id/textView14"
        android:textColor="#000000"
        android:layout_below="@+id/imgHelp"
        android:layout_alignStart="@+id/imgHelp"
        android:layout_toStartOf="@+id/textView13"
        android:textAlignment="center"
        android:layout_alignEnd="@+id/imgHelp" />

    <ImageView
        android:id="@+id/imgSettings"
        android:src="@drawable/ic_menu_manage"
        android:tint="@color/colorAccent"
        android:padding="50dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/txtPasswords"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/imgPasswords"
        android:src="@drawable/ic_menu_bulleted"
        android:tint="@color/colorAccent"
        android:paddingLeft="10dp"
        android:padding="50dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/textView13"
        android:layout_alignStart="@+id/textView14" />

    <ImageView
        android:id="@+id/imgCreator"
        android:src="@drawable/pen"
        android:tint="@color/colorAccent"
        android:paddingLeft="10dp"
        android:padding="50dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/textView13"
        android:layout_alignStart="@+id/textView13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Password Creator"
        android:id="@+id/textView11"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_below="@+id/imgCreator"
        android:layout_alignEnd="@+id/imgCreator"
        android:layout_alignStart="@+id/textView13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="All Passwords"
        android:id="@+id/textView12"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_below="@+id/imgPasswords"
        android:layout_alignStart="@+id/imgPasswords"
        android:layout_alignEnd="@+id/imgPasswords" />

</RelativeLayout>