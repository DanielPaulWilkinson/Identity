<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    >

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView4"
        android:src="@drawable/lock"
        android:tint="@color/colorAccent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Identity"
        android:id="@+id/Identity"
        android:textSize="22dp"
        android:layout_below="@+id/imageView4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Please sign up below!"
        android:id="@+id/textView2"
        android:textSize="14dp"
        android:layout_below="@+id/Identity"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtEmail"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:paddingLeft="10px"
        android:paddingRight="10px"
        android:drawablePadding="5dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="User Details"
        android:id="@+id/textView3"
        android:textSize="22dp"
        android:paddingLeft="10px"
        android:paddingRight="10px"
        android:layout_below="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtPass1"
        android:hint="Password"
        android:inputType="textPassword"
        android:drawablePadding="5dp"
        android:paddingLeft="10px"
        android:paddingRight="10px"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:layout_below="@+id/txtEmail"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="18sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtPass2"
        android:hint="Re-enter Password"
        android:inputType="textPassword"
        android:drawablePadding="5dp"
        android:paddingLeft="10px"
        android:paddingRight="10px"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:layout_below="@+id/txtPass1"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="18sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtKey"
        android:hint="Encyption Key"
        android:inputType="textPassword"
        android:paddingLeft="10px"
        android:paddingRight="10px"
        android:drawableLeft="@drawable/key_variant"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:layout_alignEnd="@+id/txtKey2"
        android:drawablePadding="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Encyption Key"
        android:id="@+id/textView4"
        android:textSize="22dp"

        android:layout_below="@+id/txtPass2"
        android:layout_alignStart="@+id/txtPass2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Lets add a encryption key so that your passwords will be safe even if someone surpasses your application password"
        android:id="@+id/textView5"
        android:textSize="14dp"
        android:paddingRight="10px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textAlignment="textStart"
        android:layout_below="@+id/txtKey2"
        android:layout_alignStart="@+id/txtKey2"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/btnContinue"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtKey2"
        android:hint="Re-enter Encryption Key"
        android:inputType="textPassword"
        android:paddingLeft="10px"
        android:drawableLeft="@drawable/key_variant"
        android:paddingRight="10px"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/txtKey"
        android:layout_alignStart="@+id/textView4"
        android:textSize="18sp"
        android:drawablePadding="5dp" />

</RelativeLayout>
</ScrollView>